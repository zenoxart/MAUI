<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.App.MVVM.Controls.RegisterControl">
	<Grid 
		Margin="20" 
		MaximumWidthRequest="300">
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<Label
			Grid.Row="0"
			Grid.Column="0"
			Text="Username"
			HorizontalOptions="Center"
			VerticalOptions="Center"
			/>

		<Entry
			Grid.Row="0"
			Grid.Column="1"
			Text="!Username"
			/>


		<Label
			Grid.Row="1"
			Grid.Column="0"
			Text="Email"
			HorizontalOptions="Center"
			VerticalOptions="Center"
			/>


		<Entry
			Grid.Row="1"
			Grid.Column="1"
			Text="Email"
			/>

		<Label
			Grid.Row="2"
			Grid.Column="0"
			Text="Password"
			HorizontalOptions="Center"
			VerticalOptions="Center"
			/>


		<Entry
			Grid.Row="2"
			Grid.Column="1"
			Text="!Password"
			IsPassword="True"
			/>


		<Button
			Grid.Row="3"
			Grid.ColumnSpan="2"
			Text="Create"
			/>



	</Grid>
</ContentView>
