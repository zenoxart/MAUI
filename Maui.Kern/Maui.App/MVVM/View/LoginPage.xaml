<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.App.MVVM.View.LoginPage"
             Title="LoginPage"
			 xmlns:controls="clr-namespace:Maui.App.MVVM.Controls">

	<ScrollView>
		<VerticalStackLayout 
			VerticalOptions="Center">
			<Label 
				Text="Input your Credentials"
				VerticalOptions="Center" 
				HorizontalOptions="Center" 
				FontSize="Medium"/>

			<!-- Login-Control -->
			<controls:LoginControl
				/>
		</VerticalStackLayout>
	</ScrollView>
</ContentPage>